<main>

  <section class="py-5 text-center container">
    <div class="row py-lg-5">
      <div class="col-lg-6 col-md-8 mx-auto">
        <h1 class="fw-light">Lista</h1>
        <h2 class="lead text-muted">Segue Lista de Produtos </h2>
      </div>
    </div>
  </section>

</main>
  </body>

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
  {{#each produto}}
      <div class="col">
        <div class="card shadow-sm">
          <img src="Images/{{imagem}}"> </img>
          <div class="card-body">
            <h1 class="card-text">{{nome}}</h1>
       <br> <p class="card-text">{{descricao}}</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <a href="/editar/{{id}}"><button type="button" class="btn btn-sm btn-outline-secondary">Editar</button></a>
                <a href="/deletar/{{id}}"><button type="button" class="btn btn-sm btn-outline-secondary">Excluir</button></a>
              </div>
            </div>
              <br> <small class="text-muted">Criado em: {{createdAt}}</small>
              <br> <small class="text-muted">Atualizado em: {{updatedAt}}</small>
          </div>
        </div>
      </div>
  {{/each}}
    </div>
  </div>
</div>
  <a href="/cadastro"><button type="button" id="botaoAdicionar" class="btn btn-primary btn-lg">Adicionar</button></a>
